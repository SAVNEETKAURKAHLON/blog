<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/style/header.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="contain">
        <div class="blog_icon"><em><span style="font-size: 60px;">B</span>log</em></div>
        <div class="navbar">
            <a href="#yblog" class="link">Home</a>
            <a href="#footer" class="link">Contact Us</a>
        </div>
    </div>
    <div class="poster">
        <img src="/style/im.png">
    </div>
    <form action="/submit" method="post" id="blogForm">
        <button type="button" name="create_blog" onclick="input_btn()" id="create_blog">Create Blog</button>
        <textarea id="input" name="blogInput" style="display: none;"></textarea>
        <button type="submit" name="submit_blog" style="display:none;" id="hidden_submit" onclick="check()">Submit Blog</button>
    </form>
   
    
    <h1 class="your_blog" id="yblog">YOUR BLOGS</h1>
    <% fileData.forEach(function(file) { %>
      
        <div class="card-group">
            <div class="card border-secondary mb-3" style="max-width: 48rem;">
                <div class="card-body text-secondary">
                  <h5 class="card-text content" style="text-align: center;"><%= file.content %></h5>
                </div>
                <div class="card-footer bg-transparent border-secondary">
                    <form action="/delete" method="post">
                    <input type="hidden" name="fileName" value="<%= file.name %>">
                    <button type="submit" class="delete">Delete</button>
                </form>
            </div>
            </div>
        </div>
        
    <% }); %>
    
    <div class="footer" id="footer">
        <div class="copyright">
            &copy; copyright
        </div>
        <div class="contact">
            <p><i class="bi bi-telephone-fill"></i> 123-234-5XX</p>
            <p><i class="bi bi-envelope-fill"></i> example.com</p>
            <p><i class="bi bi-geo-alt-fill"></i> abc city, xxx-xxx</p>
        </div>
    </div>
    <script>

        function input_btn(){
            // input = document.createElement('input');
            // input.type = 'text';
            // input.name = 'blogInput'; 
          
            // document.getElementById('input').appendChild(input);
            document.getElementById('hidden_submit').style.display="block";
            document.getElementById("input").style.display="block";
            // document.getElementById("input_author").style.display="block";
            document.getElementById('create_blog').setAttribute("disabled",true);
           
        }


        function check(){
            if (input.value.trim() === '') {
                alert('Please add text before creating blog.');
                return; 
            }
            else{
                document.getElementById('hidden_submit').style.display="none";
                document.getElementById('input').style.display="none";
                // document.getElementById('input_author').style.display="none";
                document.getElementById('create_blog').setAttribute("disabled",false);
                // input.value = '';

            }
        }


    </script>
</body>
</html>